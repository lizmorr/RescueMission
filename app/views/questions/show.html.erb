<h2><%= @question.title %></h2>
Details:
<p><%= @question.detail %></p>

<%= link_to "I have the answer!", "/questions/#{@question.id}/answers/new" %>

<% if @question.answers.present? %>
  <h2>Answers</h2>
  <ul>
    <% @question.answers.each do |answer| %>
      <li><%= answer.description %></li>
    <% end %>
  </ul>
<% end %>
